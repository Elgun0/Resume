        <div class="section-head">
            <span>WHAT I DO</span>
            <h2>My Services</h2>
        </div>

        <div class="row mt-4">
            @foreach (SectionService sectSer in ViewBag.sectionServices)
            {
            <div class="col-sm-6 col-md-4">
